@model ChangePasswordViewModelUser



   <form  asp-action="ChangePassword"
        data-ajax-method="post"
       data-ajax="true"
       data-ajax-begin="onModalBegin"
       data-ajax-success="onModalSuccess"
       data-ajax-failure="showAlertMessage"
       data-ajax-complete="onModalComplete">
                <div class="mb-5">   

                <input type="hidden" asp-for="Id" />

                 
                    <div class="form-floating mb-2">
                        <input type="password" class="form-control"  placeholder="Name Of Catigory"  asp-for="Password" />
                        <label asp-for="Password"></label>
                     </div>
                     <span asp-validation-for="Password" class="text-danger d-block"></span>

                    <div class="form-floating mb-2">
                        <input type="password" class="form-control"  placeholder="Name Of Catigory" asp-for="ConfirmPassword"/>
                        <label asp-for="ConfirmPassword"></label>
                     </div>
                    <span asp-validation-for="ConfirmPassword" class="text-danger d-block"></span>

                </div> 
             <partial name="_modalfooter"/>

    </form>